<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="TextInputEditText" parent="Base.Widget.MaterialComponents.TextInputEditText">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="HintText" parent="TextAppearance.MaterialComponents.Subtitle2"></style>

    <style name="Padding">
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:paddingRight">50dp</item>
    </style>

    <style name="padding_same">
        <item name="android:padding">30dp</item>
    </style>

</resources>